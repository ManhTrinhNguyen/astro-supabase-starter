---
interface Props {
  frontmatter?: { givenTitle: string };
  givenTitle?: string;
}

const baseTitle = Astro.props.givenTitle || Astro.props.frontmatter?.givenTitle;
const constantTitle = '';

/**
 * @format When given title: "{GIVEN TITLE} | ${CONSTANT TITLE}"
 * @format When not given title: "${CONSTANT TITLE}"
 */
const title = `${baseTitle ? `${baseTitle} | ` : ''}${constantTitle}`;

const descriptionText = 'Astro description';
const keywords: string[] = [];
---

<head>
  <meta charset="UTF-8" />
  <meta name="description" content={descriptionText} />
  <meta name="viewport" content="width=device-width" />
  <meta name="keywords" content={keywords.join(', ')} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
</head>
